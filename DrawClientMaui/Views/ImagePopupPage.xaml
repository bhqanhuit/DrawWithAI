<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DrawClientMaui.Views.ImagePopupPage"
             BackgroundColor="#80000000">
    <ContentPage.Content>
        <Grid Padding="20" VerticalOptions="Center" HorizontalOptions="Center">
            <Frame BackgroundColor="White" CornerRadius="10" Padding="10">
                <StackLayout>
                    <Image Source="{Binding ImageSource}" Aspect="AspectFit" HeightRequest="400" />
                    <Button Text="Close" Command="{Binding CloseCommand}" />
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>