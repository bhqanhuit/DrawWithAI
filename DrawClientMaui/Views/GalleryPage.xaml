<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DrawClientMaui.Views.GalleryPage"
             xmlns:models="clr-namespace:DrawClientMaui.Models"
             BackgroundColor="#E6E1F4">
    <!-- navigation bar-->
    <Grid>
        <!--Define 2 columns: navigation bar and content-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--Vertical navigation bar on left side-->
        <VerticalStackLayout Grid.Column="0" Padding="5" BackgroundColor="#6B4CAE" Spacing="20">
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Start">
                <Image Source="logo.png"
                       WidthRequest="30"
                       HeightRequest="30"
                       Aspect="AspectFit" />
                <Label Text="Draw With AI"
                       FontSize="10"
                       TextColor="White"
                       VerticalOptions="Center" />
            </HorizontalStackLayout>

            <Button Text="Home"
                    FontSize="Default"
                    TextColor="White"
                    FontAttributes="Bold"
                    BackgroundColor="Transparent"
                    Command="{Binding NavigateToHomeCommand}"
                    ImageSource="home_icon.png" />

            <Button Text="Sketch"
                    FontSize="Default"
                    TextColor="White"
                    FontAttributes="Bold"
                    BackgroundColor="Transparent"
                    Command="{Binding NavigateToSketchCommand}" />

            <Button Command="{Binding NavigateToGalleryCommand}" 
                    Style="{StaticResource CurrentNavigationButton}">
                    <Button.ImageSource>
                        <FontImageSource FontFamily="GoogleMaterialFont"
                                        Glyph="{x:Static models:IconFont.Photo_library}" />
                    </Button.ImageSource>
                    <Button.Text>
                        Library
                    </Button.Text>
            </Button>

            <Button Command="{Binding NavigateToSettingsCommand}"
                    Style="{StaticResource DefaultNavigationButton}">
                <Button.ImageSource>
                    <FontImageSource FontFamily="GoogleMaterialFont"
                    Glyph="{x:Static models:IconFont.Settings}" />
                </Button.ImageSource>
                <Button.Text>
                    Settings
                </Button.Text>
            </Button>
            
        </VerticalStackLayout>

        <!--Main content-->
        <CollectionView Grid.Column="1" ItemsSource="{Binding Sketches}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="10" BorderColor="Gray" CornerRadius="10">
                        <StackLayout>
                            <Image Source="{Binding ImageSource}" Aspect="AspectFit" HeightRequest="200" />
                            <Label Text="{Binding SketchName}" FontAttributes="Bold" FontSize="Medium" />
                            <Label Text="{Binding Prompt}" FontSize="Small" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>